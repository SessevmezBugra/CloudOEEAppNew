<mvc:View
	controllerName="workerapp.components.home.components.fastmenu.controller.Home"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<Page showHeader="false">
		
		<l:BlockLayout
			id="BlockLayout"
			background="Default">
			<l:BlockLayoutRow>
				<l:BlockLayoutCell class="sapUiNoContentPadding">
					<Image
						src="{
							path: 'view>/isPhone',
							formatter: '.formatter.srcImageValue'
						}"
						width="100%"
						height="100%"/>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
			<l:BlockLayoutRow>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet11"
					backgroundColorShade="ShadeD">
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://database"
							size="2.5rem"
							color="Default"/>
						<Title
							id="mainData"
							text="{i18n>MAIN_DATA_TITLE}"
							level="H3"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>MAIN_DATA_DESCRIPTION}"
							class="sapUiTinyMarginBottom"/>
						<Link
							press="goToTargetMenu"
							text="{i18n>MAIN_DATA_GO}"
							tooltip="{i18n>MAIN_DATA_GO_TOOLTIP}">
							<customData>
								<core:CustomData key="target" value="mainData"/>
							</customData>	
						</Link>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet11"
					backgroundColorShade="ShadeB">
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://inventory"
							size="2.5rem"
							color="Default"/>
						<Title
							id="stockManagement"
							text="{i18n>STOCKMANAGEMENT_TITLE}"
							level="H3"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>STOCKMANAGEMENT_DESCRIPTION}"
							class="sapUiTinyMarginBottom"/>
						<Link
							press="goToTargetMenu"
							text="{i18n>STOCKMANAGEMENT_GO}"
							tooltip="{i18n>STOCKMANAGEMENT_GO_TOOLTIP}">
							<customData>
								<core:CustomData key="target" value="stockManagement"/>
							</customData>	
						</Link>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet11"
					backgroundColorShade="ShadeD">
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://my-sales-order"
							size="2.5rem"
							color="Default"/>
						<Title
							text="{i18n>ORDERMANAGEMENT_TITLE}"
							level="H3"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>ORDERMANAGEMENT_DESCRIPTION}"
							class="sapUiTinyMarginBottom"/>
						<Link
							press="goToTargetMenu"
							text="{i18n>ORDERMANAGEMENT_GO}"
							tooltip="{i18n>ORDERMANAGEMENT_GO_TOOLTIP}">
							<customData>
								<core:CustomData key="target" value="orderManagement"/>
							</customData>	
						</Link>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet11"
					backgroundColorShade="ShadeB">
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://company-view"
							size="2.5rem"
							color="Default"/>
						<Title
							text="{i18n>STAFFMANAGEMENT_TITLE}"
							level="H3"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>STAFFMANAGEMENT_DESCRIPTION}"
							class="sapUiTinyMarginBottom"/>
						<Link
							press="goToTargetMenu"
							text="{i18n>STAFFMANAGEMENT_GO}"
							tooltip="{i18n>STAFFMANAGEMENT_GO_TOOLTIP}">
							<customData>
								<core:CustomData key="target" value="staffManagement"/>
							</customData>	
						</Link>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
			<l:BlockLayoutRow>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet11"
					backgroundColorShade="ShadeB">
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://mri-scan"
							size="2.5rem"
							color="Default"/>
						<Title
							text="{i18n>OEEAPP_TITLE}"
							level="H3"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>OEEAPP_DESCRIPTION}"
							class="sapUiTinyMarginBottom"/>
						<Link
							press="goToTargetMenu"
							text="{i18n>OEEAPP_GO}"
							tooltip="{i18n>OEEAPP_GO_TOOLTIP}">
							<customData>
								<core:CustomData key="target" value="oeeApp"/>
							</customData>	
						</Link>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet9"
					backgroundColorShade="ShadeA"
					width="3">
					<Table
						fixedLayout="false">
						<headerToolbar>
							<Toolbar design="Transparent">
								<Title
									text="{i18n>ORDERMANAGEMENT_ORDERS_TITLE}"
									level="H3"/>
							</Toolbar>
						</headerToolbar>
							<columns>
								<Column hAlign="Center">
									<Text text="{i18n>ORDERMANAGEMENT_ORDERNO}"/>
								</Column>
								<Column hAlign="Center">
									<Text text="{i18n>ORDERMANAGEMENT_CUSTOMER}"/>
								</Column>
								<Column hAlign="Center">
									<Text text="{i18n>ORDERMANAGEMENT_PLANNED_STARTDATE}"/>
								</Column>
								<Column hAlign="Center">
									<Text text="{i18n>ORDERMANAGEMENT_PLANNED_ENDDATE}"/>
								</Column>
								<Column hAlign="Center">
									<Text text="{i18n>ORDERMANAGEMENT_STATUS}"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Text text="ON987656789"/>
										<Text text="Armolis"/>
										<Text text="10.10.2050 10:30"/>
                                        <Text text="10.10.2055 10:30"/>
										<ObjectNumber
											number="TETS"
											state="Success"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
		</l:BlockLayout>
	</Page>
</mvc:View>