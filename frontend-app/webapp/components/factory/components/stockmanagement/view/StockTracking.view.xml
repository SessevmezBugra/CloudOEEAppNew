<mvc:View controllerName="workerapp.components.factory.components.stockmanagement.controller.StockTracking" 
	xmlns="sap.m" 
	xmlns:l="sap.ui.layout" 
	xmlns:core="sap.ui.core" 
	xmlns:f="sap.ui.layout.form" 
	xmlns:mvc="sap.ui.core.mvc">
	<Page showHeader="false" title="{i18n>STOCK_INFORMATION}" backgroundDesign="Transparent">
		<content>
			<Panel xmlns="sap.m" width="auto" expandable="true" expanded="true" id="panel0" >
				<headerToolbar>
					<Toolbar id="toolbar1">
						<Title text="{i18n>WAREHOUSE}"></Title>
						<ToolbarSpacer></ToolbarSpacer>
						<Label text="{i18n>CHOOSECOMPANY} : "></Label>
						<ComboBox items="{stockModel>/companys}" change="onSelectedCompany" width="10%" placeHoldee="Şirket seçiniz...">
							<items>
								<core:Item key="{stockModel>companyId}" text="{stockModel>companyName}"/>
							</items>
						</ComboBox>
						<Label text="{i18n>CHOOSECLIENT} : "></Label>
						<ComboBox items="{stockModel>/clients}" change="onSelectedClient" width="10%" placeHoldee="Bölge seçiniz...">
							<items>
								<core:Item key="{stockModel>clientId}" text="{stockModel>clientName}"/>
							</items>
						</ComboBox>
						<Label text="{i18n>CHOOSEPLANT} : "></Label>
						<ComboBox items="{stockModel>/plants}" change="onSelectedPlant" width="10%" placeHoldee="Fabrika seçiniz...">
							<items>
								<core:Item key="{stockModel>plantId}" text="{stockModel>plantName}"/>
							</items>
						</ComboBox>
						<Label text="{i18n>CHOOSEWAREHOUSE} : "></Label>
						<ComboBox items="{stockModel>/warehouses}" change="onSelectedWarehouse" width="10%" placeHoldee="Depo seçiniz...">
							<items>
								<core:Item key="{stockModel>warehouseId}" text="{stockModel>warehouseName}"/>
							</items>
						</ComboBox>
					</Toolbar>
				</headerToolbar>
				<content>
					<ObjectHeader title="{stockModel>/selectedWarehouse/warehouseName}"  backgroundDesign="Solid" number="İstanbul, Turkey" numberUnit="05:15 PM, Thursday" icon="sap-icon://addresses" iconDensityAware="false">
						<attributes>
							<ObjectAttribute title="{i18n>ADDRESS}" text="BLR.01, B2.023"/>
							<ObjectAttribute title="{i18n>OFFICEPHONE}" text="+91-90100-98100"/>
							<ObjectAttribute title="{i18n>EMAIL}" text="example@bybas.com" active="true"/>
						</attributes>
						<statuses>
							<ObjectStatus title="{i18n>STATUS}" icon="sap-icon://employee-approvals" text="Available" state="Success"/>
						</statuses>
					</ObjectHeader>
				</content>
			</Panel>
			<IconTabBar select="onSelectedTab" backgroundDesign="Transparent" headerBackgroundDesign="Transparent">
				<items>
					<IconTabFilter text="{i18n>PRODUCT}" icon="sap-icon://product" iconColor="Neutral" id="filter3">
						<content>
							<Toolbar>
								<Title text="Search" />
								<ToolbarSpacer />
								<SearchField width="50%" liveChange=".onFilterProducts"/>
							</Toolbar>
							<Table noDataText="{i18n>STOCK_NODATA}" id="stock_table" items="{stockModel>/stocks}" backgroundDesign="Transparent">
								<items>
									<ColumnListItem type="Active" id="item4">
										<cells>
											<Text text="{stockModel>materialId}" id="text3"/>
											<Text text="{stockModel>materialDesc}" id="text4"/>
											<ObjectStatus	class="sapUiSmallMarginBottom"
												text="Product Shipped"
												icon="sap-icon://status-positive"
												state="Success" visible="true"/>
											<Text text="{stockModel>quantity}" id="text5"/>
										</cells>
									</ColumnListItem>
								</items>
								<columns>
									<Column id="column3">
										<header>
											<Label text="{i18n>PRODUCTNUMBER}" id="label3"/>
										</header>
									</Column>
									<Column id="column4">
										<header>
											<Label text="{i18n>PRODUCTNAME}" id="label4"/>
										</header>
									</Column>
									<Column id="column8" visible="true">
										<header>
											<Label text="{i18n>STOCKSTATUS}" id="label8" />
										</header>
									</Column>
									<Column id="column5">
										<header>
											<Label text="{i18n>STOCKAMOUNT}" id="label5"/>
										</header>
									</Column>
								</columns>
							</Table>
						</content>
					</IconTabFilter>
					<IconTabFilter text="{i18n>PRODUCTADD}" icon="sap-icon://add-product" iconColor="Positive" id="filter1">
						<f:SimpleForm id="simple1" title="{i18n>PRODUCTADD}" editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" columnsM="6" columnsL="5" columnsXL="5" emptySpanL="3" emptySpanXL="3" emptySpanM="2">
							<f:content>
								<Label text="{i18n>PRODUCTNAME}"></Label>
								<ComboBox items="{stockModel>/materials}" change="onSelectedMaterial" > 
									<items>
										<core:Item key="{stockModel>materialId}" text="{stockModel>materialDesc}"/>
									</items>
								</ComboBox>
								<Label text="{i18n>STOCKAMOUNT}"></Label>
								<Input width="100%" value="{stockModel>/materialQuantity}"/>
								<Input width="100%" editable="false" value="Mevcut Stock : {stockModel>/stocks/quantity}">
									<layoutData>
										<l:GridData span="XL2 L2 M2"/>
									</layoutData>
								</Input>
								<Label text="{i18n>STOCKQUALITY}" visible="false"></Label>
								<ComboBox xmlns="sap.m" id="box0" visible="false">
									<items>
										<core:Item xmlns:core="sap.ui.core" key="item-1-key" text="Item 1 Text" id="item0_1589367031038"/>
										<core:Item xmlns:core="sap.ui.core" key="item-2-key" text="Item 2 Text" id="item1_1589367031039"/>
									</items>
								</ComboBox>
								<Label text="Metarial Number" visible="false"></Label>
								<Input width="100%" visible="false">
									<layoutData>
										<l:GridData span="XL1 L1 M5"></l:GridData>
									</layoutData>
								</Input>
								<Button xmlns="sap.m" text="Stok Ekle" id="button0" type="Accept" press="saveStock">
									<layoutData>
										<l:GridData span="XL2 L2 M6"></l:GridData>
									</layoutData>
								</Button>
								<Button xmlns="sap.m" text="Stok Çıkart" id="button1" type="Reject" press="extractStock"></Button>
							</f:content>
						</f:SimpleForm>
					</IconTabFilter>
					<IconTabFilter text="{i18n>PRODUCTLOG}" icon="sap-icon://shipping-status" iconColor="Critical" id="filter2">
						<content>
							<Table noDataText="{i18n>STOCK_NODATA}"  items="{stockModel>/stocks}" backgroundDesign="Transparent">
								<items>
									<ColumnListItem type="Active" >
										<cells>
											<Text text="{stockModel>materialId}"/>
											<Text text="{stockModel>materialDesc}" />
											<ObjectStatus	class="sapUiSmallMarginBottom"
												text="Product Shipped"
												icon="sap-icon://status-positive"
												state="Success" visible="true"/>
											<Text text="{stockModel>quantity}" />
										</cells>
									</ColumnListItem>
								</items>
								<columns>
									<Column>
										<header>
											<Label text="{i18n>PRODUCTNUMBER}"/>
										</header>
									</Column>
									<Column>
										<header>
											<Label text="{i18n>PRODUCTNAME}"/>
										</header>
									</Column>
									<Column >
										<header>
											<Label text="{i18n>STOCKTRANSACTIONS}" />
										</header>
									</Column>
									<Column>
										<header>
											<Label text="{i18n>MAKINGPROCESS}"/>
										</header>
									</Column>
								</columns>
							</Table>
						</content>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
	</Page>
</mvc:View>