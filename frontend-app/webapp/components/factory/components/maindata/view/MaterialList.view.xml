<mvc:View controllerName="workerapp.components.factory.components.maindata.controller.MaterialList" 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:semantic="sap.f.semantic">

	<Page showHeader="true" title="{i18n>MATERIAL_TITLE}" class="sapUiResponsivePadding--header" floatingFooter="true" backgroundDesign="Transparent">
		<IconTabBar id="iconTabBar" select=".onQuickFilter" expandable="false" headerBackgroundDesign="Transparent" backgroundDesign="Transparent">
			<items>
				<IconTabFilter key="all" showAll="true" count="{materialModel>/countAll}" text="{i18n>MATERIAL_ALLMATERIAL}"/>
				<IconTabSeparator/>
				<IconTabFilter key="inStock" icon="sap-icon://message-success" iconColor="Positive" count="{materialModel>/inStock}" text="{i18n>MATERIAL_INSTOCK}"/>
				<IconTabFilter key="shortage" icon="sap-icon://message-warning" iconColor="Critical" count="{materialModel>/shortage}" text="{i18n>MATERIAL_SHORTAGE}"/>
				<IconTabFilter key="outOfStock" icon="sap-icon://message-error" iconColor="Negative" count="{materialModel>/outOfStock}" text="{i18n>MATERIAL_OUTOFSTOCK}"/>
			</items>
			<content>
				<Table growing="true" growingScrollToLoad="true" noDataText="{i18n>MATERIAL_TABLE_NOTEXT}" width="auto" mode="MultiSelect" items="{materialModel>/materials}">
					<headerToolbar>
						<Toolbar>
							<ToolbarSpacer/>
							<SearchField id="searchField" tooltip="{i18n>MATERIAL_SEARCHFIELD_TOOLTIP}" search=".onSearch" width="auto">
							</SearchField>
						</Toolbar>
					</headerToolbar>

					<columns>
						<Column id="nameColumn">
							<Text id="nameColumnTitle" text="{i18n>MATERIAL_MATERIALNUMBER}"/>
						</Column>
						<Column id="supplierNameColumn" demandPopin="false" minScreenWidth="Tablet">
							<Text text="{i18n>MATERIAL_MATERIALNAME}"/>
						</Column>
						<Column id="unitPriceColumn" hAlign="End" demandPopin="true" minScreenWidth="Tablet">
							<Text text="{i18n>MATERIAL_QUANTITY}"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Navigation" press=".onPress">
							<cells>
								<ObjectIdentifier title="{materialModel>MATNR}"/>
								<Text text = "{materialModel>MATDESC}"/>
								<ObjectNumber unit="{materialModel>UOM}" number="{materialModel>QUANTITY}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</content>
		</IconTabBar>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="{i18n>MATERIAL_CREATE}" press=".createMaterial"/>
				<Button type="Reject" text="{i18n>MATERIAL_REMOVE}" press=".removeMaterial"/>
			</OverflowToolbar>
		</footer>
	</Page>
