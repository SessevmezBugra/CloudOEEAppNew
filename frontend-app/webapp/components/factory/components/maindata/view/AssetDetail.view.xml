<mvc:View displayBlock="true" controllerName="workerapp.components.factory.components.maindata.controller.AssetDetail" height="100%"
    xmlns="sap.uxap"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form">
    <ObjectPageLayout showFooter="true"  showTitleInHeaderContent="true" alwaysShowContentHeader="true" preserveHeaderStateOnScroll="false" headerContentPinnable="true" isChildPage="true" upperCaseAnchorBar="false">
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <expandedHeading>
                    <m:Title text="{maindataModel>/assetInfo/assetName}" wrapping="true" class="sapUiSmallMarginEnd" />
                </expandedHeading>
                <snappedHeading>
                    <m:FlexBox fitContainer="true" alignItems="Center">
                        <m:Title text="{maindataModel>/assetInfo/assetName}" wrapping="true" class="sapUiSmallMarginEnd" />
                    </m:FlexBox>
                </snappedHeading>

                <navigationActions>
                    <m:OverflowToolbarButton icon="sap-icon://decline" press="handleClose" tooltip="Close column" />
                </navigationActions>

            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <sections>
            <ObjectPageSection title="{i18n>ASSETDETAIL_WAREHOUSES}" visible="{= ${maindataModel>/assetType} === 'plant' ? true : false}">
                <subSections>
                    <ObjectPageSubSection >
                        <blocks>
                            <l:BlockLayout background="Dashboard">
                                <l:BlockLayoutRow>
                                    <l:BlockLayoutCell>
                                        <m:Table id="warehouseTable" backgroundDesign="Solid" width="auto" items="{maindataModel>/warehouses}" enableBusyIndicator="false" busy="{orderModel>/warehouseTableBusy}">
                                            <m:headerToolbar>
                                                <m:OverflowToolbar>
                                                    <m:content>
                                                        <m:ToolbarSpacer />
                                                        <m:Button press="openCreateWarehouseDialog" type="Accept" text="{i18n>ASSETDETAIL_BTN_CREATE_WAREHOUSE}" visible="{= ${maindataModel>/assetType} === 'plant' ? true : false}"/>
                                                    </m:content>
                                                </m:OverflowToolbar>
                                            </m:headerToolbar>
                                            <m:columns>
                                                <m:Column minScreenWidth="Tablet" demandPopin="true">
                                                    <m:Text text="{i18n>ASSETDETAIL_WAREHOUSE_NAME}" />
                                                </m:Column>
                                                <m:Column minScreenWidth="Tablet" demandPopin="true">
                                                    <m:Text text="{i18n>ASSETDETAIL_TRANSACTIONS_TITLE}" />
                                                </m:Column>
                                            </m:columns>
                                            <m:items>
                                                <m:ColumnListItem >
                                                    <m:cells>
                                                        <m:ObjectIdentifier text="{maindataModel>warehouseName}" />
                                                    </m:cells>
                                                    <m:cells>
                                                        <m:HBox>
                                                            <m:Button type="Accept" press = "openUpdateWarehouseDialog" class = "sapUiSmallMarginEnd" text="{i18n>ASSET_DIALOG_UPDATE_BTN}"/>
                                                            <m:Button type="Critical" press = "openDeleteWarehouseDialog" text="{i18n>ASSET_DIALOG_DELETE_BTN}"/>
                                                        </m:HBox>
                                                    </m:cells>
                                                </m:ColumnListItem>
                                            </m:items>
                                        </m:Table>
                                    </l:BlockLayoutCell>
                                </l:BlockLayoutRow>
                            </l:BlockLayout>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection title="{i18n>ASSETDETAIL_MATERIALS}" visible="{= ${maindataModel>/assetType} === 'plant' ? true : false}">
                <subSections>
                    <ObjectPageSubSection >
                        <blocks>
                            <l:BlockLayout background="Dashboard">
                                <l:BlockLayoutRow>
                                    <l:BlockLayoutCell>
                                        <m:Table id="materialTable" backgroundDesign="Solid" width="auto" items="{maindataModel>/materials}" enableBusyIndicator="false" busy="{maindataModel>/materialTableBusy}">
                                            <m:headerToolbar>
                                                <m:OverflowToolbar>
                                                    <m:content>
                                                        <m:ToolbarSpacer />
                                                        <m:Button press="openCreateMaterialDialog" type="Accept" text="{i18n>ASSETDETAIL_BTN_CREATE_MATERIAL}" visible="{= ${maindataModel>/assetType} === 'plant' ? true : false}"/>
                                                    </m:content>
                                                </m:OverflowToolbar>
                                            </m:headerToolbar>
                                            <m:columns>
                                                <m:Column minScreenWidth="Tablet" demandPopin="true">
                                                    <m:Text text="{i18n>ASSETDETAIL_MATERIAL_DESC}" />
                                                </m:Column>
                                                <m:Column minScreenWidth="Tablet" demandPopin="true">
                                                    <m:Text text="{i18n>ASSETDETAIL_MATERIAL_NUMBER}" />
                                                </m:Column>
                                                <m:Column minScreenWidth="Tablet" demandPopin="true">
                                                    <m:Text text="{i18n>ASSETDETAIL_TRANSACTIONS_TITLE}" />
                                                </m:Column>
                                            </m:columns>
                                            <m:items>
                                                <m:ColumnListItem >
                                                    <m:cells>
                                                        <m:ObjectIdentifier text="{maindataModel>materialDesc}" />
                                                    </m:cells>
                                                    <m:cells>
                                                        <m:ObjectIdentifier text="{maindataModel>materialNumber}" />
                                                    </m:cells>
                                                    <m:cells>
                                                        <m:HBox>
                                                            <m:Button type="Accept" press = "openUpdateMaterialDialog" class = "sapUiSmallMarginEnd" text="{i18n>ASSET_DIALOG_UPDATE_BTN}"/>
                                                            <m:Button type="Critical" press = "openDeleteMaterialDialog" text="{i18n>ASSET_DIALOG_DELETE_BTN}"/>
                                                        </m:HBox>
                                                    </m:cells>
                                                </m:ColumnListItem>
                                            </m:items>
                                        </m:Table>
                                    </l:BlockLayoutCell>
                                </l:BlockLayoutRow>
                            </l:BlockLayout>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection title="{i18n>ASSETDETAIL_QUALITY_TITLE}" visible="{= ${maindataModel>/assetType} === 'plant' ? true : false}">
                <subSections>
                    <ObjectPageSubSection >
                        <blocks>
                            <l:BlockLayout background="Dashboard">
                                <l:BlockLayoutRow>
                                    <l:BlockLayoutCell>
                                        <m:Table id="qualityTable" backgroundDesign="Solid" width="auto" items="{maindataModel>/qualityType}" enableBusyIndicator="false" busy="{maindataModel>/materialTableBusy}">
                                            <m:headerToolbar>
                                                <m:OverflowToolbar>
                                                    <m:content>
                                                        <m:ToolbarSpacer />
                                                        <m:Button press="openCreateQualityTypeDialog" type="Accept" text="{i18n>ASSETDETAIL_BTN_CREATE_QUALITYTYPE}" visible="{= ${maindataModel>/assetType} === 'plant' ? true : false}"/>
                                                    </m:content>
                                                </m:OverflowToolbar>
                                            </m:headerToolbar>
                                            <m:columns>
                                                <m:Column minScreenWidth="Tablet" demandPopin="true">
                                                    <m:Text text="{i18n>ASSETDETAIL_QUALITY_CODE}" />
                                                </m:Column>
                                                <m:Column minScreenWidth="Tablet" demandPopin="true">
                                                    <m:Text text="{i18n>ASSETDETAIL_QUALITY_DESC}" />
                                                </m:Column>
                                                <m:Column minScreenWidth="Tablet" demandPopin="true">
                                                    <m:Text text="{i18n>ASSETDETAIL_TRANSACTIONS_TITLE}" />
                                                </m:Column>
                                            </m:columns>
                                            <m:items>
                                                <m:ColumnListItem >
                                                    <m:cells>
                                                        <m:ObjectIdentifier text="{maindataModel>qualityType}" />
                                                    </m:cells>
                                                    <m:cells>
                                                        <m:ObjectIdentifier text="{maindataModel>qualityDesc}" />
                                                    </m:cells>
                                                    <m:cells>
                                                        <m:HBox>
                                                            <m:Button type="Accept" press = "openUpdateQualityTypeDialog" class = "sapUiSmallMarginEnd" text="{i18n>ASSET_DIALOG_UPDATE_BTN}" 
                                                                visible="{
                                                                    path: 'maindataModel>qualityType',
                                                                    formatter: '.formatter.updateQualityTypeVisiblity'
                                                                }"/>
                                                            <m:Button type="Critical"  press = "openDeleteQualityTypeDialog" text="{i18n>ASSET_DIALOG_DELETE_BTN}"/>
                                                        </m:HBox>
                                                    </m:cells>
                                                </m:ColumnListItem>
                                            </m:items>
                                        </m:Table>
                                    </l:BlockLayoutCell>
                                </l:BlockLayoutRow>
                            </l:BlockLayout>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection title="{i18n>ASSETDETAIL_REASONCODE_TITLE}" visible="{= ${maindataModel>/assetType} === 'plant' ? true : false}">
                <subSections>
                    <ObjectPageSubSection >
                        <blocks>
                            <l:BlockLayout background="Dashboard">
                                <l:BlockLayoutRow>
                                    <l:BlockLayoutCell>
                                        <m:Table id="reasonCodeTable" backgroundDesign="Solid" width="auto" items="{maindataModel>/reasonCode}" enableBusyIndicator="false" busy="{maindataModel>/materialTableBusy}">
                                            <m:headerToolbar>
                                                <m:OverflowToolbar>
                                                    <m:content>
                                                        <m:ToolbarSpacer />
                                                        <m:Button press="openCreateReasonDialog" type="Accept" text="{i18n>ASSETDETAIL_BTN_CREATE_REASONCODE}" visible="{= ${maindataModel>/assetType} === 'plant' ? true : false}"/>
                                                    </m:content>
                                                </m:OverflowToolbar>
                                            </m:headerToolbar>
                                            <m:columns>
                                                <m:Column minScreenWidth="Tablet" demandPopin="true">
                                                    <m:Text text="{i18n>ASSETDETAIL_REASONCODE_CODE}" />
                                                </m:Column>
                                                <m:Column minScreenWidth="Tablet" demandPopin="true">
                                                    <m:Text text="{i18n>ASSETDETAIL_REASONCODE_DESC}" />
                                                </m:Column>
                                                <m:Column minScreenWidth="Tablet" demandPopin="true">
                                                    <m:Text text="{i18n>ASSETDETAIL_TRANSACTIONS_TITLE}" />
                                                </m:Column>
                                            </m:columns>
                                            <m:items>
                                                <m:ColumnListItem >
                                                    <m:cells>
                                                        <m:ObjectIdentifier text="{maindataModel>reasonCode}" />
                                                    </m:cells>
                                                    <m:cells>
                                                        <m:ObjectIdentifier text="{maindataModel>reasonDesc}" />
                                                    </m:cells>
                                                    <m:cells>
                                                        <m:HBox>
                                                            <m:Button type="Accept" press = "openUpdateReasonCodeDialog" class = "sapUiSmallMarginEnd" text="{i18n>ASSET_DIALOG_UPDATE_BTN}"/>
                                                            <m:Button type="Critical" press = "openDeleteReasonCodeDialog" text="{i18n>ASSET_DIALOG_DELETE_BTN}"/>
                                                        </m:HBox>
                                                    </m:cells>
                                                </m:ColumnListItem>
                                            </m:items>
                                        </m:Table>
                                    </l:BlockLayoutCell>
                                </l:BlockLayoutRow>
                            </l:BlockLayout>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
        <footer>
            <m:OverflowToolbar>
                <m:Button type="Critical" text="{
										path: 'maindataModel>/assetType',
										formatter: '.formatter.deleteAssetBtnText'
										}" press="openDeleteAssetDialog"/>
                <m:ToolbarSpacer />




            </m:OverflowToolbar>
        </footer>
    </ObjectPageLayout>
</mvc:View>