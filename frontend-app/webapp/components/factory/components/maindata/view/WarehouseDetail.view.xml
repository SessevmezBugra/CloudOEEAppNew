<mvc:View controllerName="workerapp.components.factory.components.maindata.controller.Warehouse" 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc">

	<Page showHeader="true" title="{i18n>COMPANY_TITLE}" class="sapUiResponsivePadding--header" floatingFooter="true" backgroundDesign="Transparent">
		<m:Tree mode="SingleSelectMaster" id="idTree" items="{companyModel>/companies/children/}" width="auto" selectionChange="onSelectedItem">
			<m:StandardTreeItem title="{companyModel>text}"/>
		</m:Tree>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="{i18n>COMPANY_BTN_CREATE}" press=".createCompany"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>