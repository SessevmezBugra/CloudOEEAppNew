<core:FragmentDefinition xmlns="sap.m" 
    xmlns:l="sap.ui.layout" 
    xmlns:f="sap.ui.layout.form" 
    xmlns:core="sap.ui.core">
    <Dialog title="Personel Bilgilerini Güncelle" contentWidth="450px" contentHeight="700px" resizable="false">
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
                    <f:content>
                        <Label text="Personel İsmi" />
                        <Input value="{staffModel>/personName}"/>
                        <Label text="Personel Soyismi" />
                        <Input value="{staffModel>/personSurname}"/>
                        <Label text="Personel E-Mail" />
                        <Input value="{staffModel>/personMail}"/>
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
        <beginButton>
            <Button text="Güncelle" press=".updatePerson">
            </Button>
        </beginButton>
        <endButton>
            <Button text="Iptal" press=".closeUpdatePersonDialog">
            </Button>
        </endButton>
    </Dialog>
</core:FragmentDefinition>