<core:FragmentDefinition xmlns="sap.m" 
    xmlns:l="sap.ui.layout" 
    xmlns:f="sap.ui.layout.form" 
    xmlns:core="sap.ui.core">
    <Dialog title="Personel Oluşturun" contentWidth="450px" contentHeight="700px" resizable="false">
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm editable="true" layout="ResponsiveGridLayout" title="Personel" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
                    <f:content>
                        <Label text="Role Seç" />
                        <Select forceSelection="false" change="onSelectedRole">
                            <core:Item text="Şirket Yöneticisi" key="0"/>
                            <core:Item text="Bölge Yöneticisi" key="1"/>
                            <core:Item text="Fabrika Yöneticisi" key="2"/>
                            <core:Item text="Operatör" key="3"/>
                        </Select>
                        <Label text="Sorumluluk" />
                        <Select forceSelection="false" selectedKey="{staffModel>/selectedPlant}" items="{staffModel>/plants}" change="onSelectedPlant">
                            <core:Item text="{staffModel>plantName}" key="{staffModel>plantId}"/>
                        </Select>
                        <Label text="Personel Kullanıcı Adı" />
                        <Input value="{staffModel>/personUserName}"/>
                        <Label text="Personel İsmi" />
                        <Input value="{staffModel>/personName}"/>
                        <Label text="Personel Soyismi" />
                        <Input value="{staffModel>/personSurname}"/>
                        <Label text="Personel E-Mail" />
                        <Input value="{staffModel>/personMail}"/>
                        <Label text="Personel Telefon" />
                        <Input value="{staffModel>/personPhone}"/>
                        <Label text="Personel Şifre" />
                        <Input value="{staffModel>/password}"/>
                        <Label text="Personel Şifre Tekrar" />
                        <Input value="{staffModel>/passwordRetry}"/>
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
        <beginButton>
            <Button text="Olustur" press=".createPerson">
            </Button>
        </beginButton>
        <endButton>
            <Button text="Iptal" press=".closePersonDialog">
            </Button>
        </endButton>
    </Dialog>
</core:FragmentDefinition>