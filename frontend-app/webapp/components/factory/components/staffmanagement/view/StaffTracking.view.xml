<mvc:View controllerName="workerapp.components.factory.components.staffmanagement.controller.StaffTracking"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<Page showHeader="false">
		<f:DynamicPage id="dynamicPageId" showFooter="true" class="sapUiNoContentPadding" toggleHeaderOnTitleClick="false" backgroundDesign="Transparent">
			<!-- DynamicPage Title -->
			<f:title>
				<f:DynamicPageTitle>
					<f:heading>
						<Title text="{i18n>PERSONELS}"/>
					</f:heading>
				</f:DynamicPageTitle>
			</f:title>

			<!-- DynamicPage Content -->
			<f:content>
				<l:BlockLayout background="Dashboard">
					<l:BlockLayoutRow>
						<l:BlockLayoutCell>
							<Table id="staffTable" items="{staffModel>/users}" autoPopinMode="true" contextualWidth="Auto" alternateRowColors="true">
								<headerToolbar>
									<OverflowToolbar>
										<ToolbarSpacer/>
										<SearchField search="onSearch" width="17.5rem"/>
									</OverflowToolbar>
								</headerToolbar>
								<columns>
									<Column importance="High">
										<Text text="{i18n>PERSONEL_NAME}" />
									</Column>
									<Column importance="High">
										<Text text="{i18n>PERSONEL_SURNAME}" />
									</Column>

									<Column importance="High">
										<Text text="{i18n>PERSONEL_USER_NAME}" />
									</Column>
								</columns>
								<items>
									<ColumnListItem type="Navigation" press="onListItemPress">
										<cells>
											<ObjectIdentifier text="{staffModel>firstName}" />
											<ObjectIdentifier text="{staffModel>lastName}" />
											<ObjectIdentifier text="{staffModel>username}" />
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</l:BlockLayoutCell>
					</l:BlockLayoutRow>
				</l:BlockLayout>
			</f:content>

			<!-- DynamicPage Footer -->
			<f:footer>
				<OverflowToolbar>
					<ToolbarSpacer/>
					<Button type="Accept" text="{i18n>PERSONEL_ADD}" press="openCreatePersonDialog"/>
				</OverflowToolbar>
			</f:footer>
		</f:DynamicPage>
	</Page>
</mvc:View>