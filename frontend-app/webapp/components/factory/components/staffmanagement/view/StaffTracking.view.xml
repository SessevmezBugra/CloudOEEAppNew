<mvc:View
	controllerName="workerapp.components.factory.components.staffmanagement.controller.StaffTracking"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<Page showHeader="false" backgroundDesign="Transparent">
		<f:DynamicPage id="dynamicPageId" showFooter="true" class="sapUiNoContentPadding" toggleHeaderOnTitleClick="false" backgroundDesign="Transparent">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle backgroundDesign="Transparent">
				<f:heading>
					<Title text="Personeller"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>

		<!-- DynamicPage Content -->
		<f:content>
			<Panel width="" class="arcloudBackgroundColor">
				<Table id="staffTable" backgroundDesign="Transparent" width="auto">
					<headerToolbar>
						<OverflowToolbar>
							<ToolbarSpacer/>
							<SearchField search="onSearch" width="17.5rem"/>
						</OverflowToolbar>
					</headerToolbar>
					<columns>
						<Column>
							<Text text="Personel Name" />
						</Column>
						<Column minScreenWidth="Desktop" demandPopin="true">
							<Text text="Personel Surname" />
						</Column>

						<Column minScreenWidth="Desktop" demandPopin="true">
							<Text text="Personel Company" />
						</Column>
						<Column minScreenWidth="Desktop" demandPopin="true">
							<Text text="Status" />
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Navigation" press="onListItemPress">
							<cells>
								<ObjectIdentifier text="{orderModel>plantName}" />
								<ObjectIdentifier text="{orderModel>orderNo}" />
								<ObjectIdentifier text="{orderModel>customer}" />
								<ObjectIdentifier text="{orderModel>status}" />
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</Panel>
		</f:content>

		<!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<!-- <Button type="Accept" text="{i18n>ORDER_BTN_CREATE}" press=".openCreateOrderDialog"/> -->
				<Button type="Accept" text="Personel Ekle" press="openCreatePersonDialog"/>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
	</Page>
</mvc:View>