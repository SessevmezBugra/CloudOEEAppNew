<mvc:View
	controllerName="workerapp.components.factory.components.staffmanagement.controller.StaffTracking"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<Page showHeader="false" backgroundDesign="Transparent">
		<f:DynamicPage id="dynamicPageId" showFooter="true" class="sapUiNoContentPadding" toggleHeaderOnTitleClick="false" backgroundDesign="Transparent">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle backgroundDesign="Transparent">
				<f:heading>
					<Title text="{i18n>PERSONELS}"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>

		<!-- DynamicPage Content -->
		<f:content>
			<Panel width="" class="arcloudBackgroundColor">
				<Table id="staffTable" items="{staffModel>/users}" backgroundDesign="Transparent" width="auto">
					<headerToolbar>
						<OverflowToolbar>
							<ToolbarSpacer/>
							<SearchField search="onSearch" width="17.5rem"/>
						</OverflowToolbar>
					</headerToolbar>
					<columns>
						<Column>
							<Text text="{i18n>PERSONEL_NAME}" />
						</Column>
						<Column minScreenWidth="Desktop" demandPopin="true">
							<Text text="{i18n>PERSONEL_SURNAME}" />
						</Column>

						<Column minScreenWidth="Desktop" demandPopin="true">
							<Text text="{i18n>PERSONEL_USER_NAME}" />
						</Column>
						<Column minScreenWidth="Desktop" demandPopin="true">
							<Text text="{i18n>STATUS}" />
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Navigation" press="onListItemPress">
							<cells>
								<ObjectIdentifier text="{staffModel>firstName}" />
								<ObjectIdentifier text="{staffModel>lastName}" />
								<ObjectIdentifier text="{staffModel>username}" />
								<ObjectIdentifier text="{staffModel>orderStatus}" />
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</Panel>
		</f:content>

		<!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="{i18n>PERSONEL_ADD}" press="openCreatePersonDialog"/>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
	</Page>
</mvc:View>