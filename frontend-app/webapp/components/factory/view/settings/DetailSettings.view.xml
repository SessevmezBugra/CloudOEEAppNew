<mvc:View
	controllerName="workerapp.components.factory.controller.settings.MasterSettings"
	xmlns="sap.uxap"
	xmlns:f="sap.ui.layout.form"
	xmlns:m="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<m:Page>
		<m:landmarkInfo>
			<m:PageAccessibleLandmarkInfo
				rootRole="Region"
				rootLabel="RootLabel"
				contentRole="Main"
				contentLabel="ContentLabel"/>
		</m:landmarkInfo>
		<ObjectPageLayout id="objectPageLayout">
			<headerTitle>
				<ObjectPageHeader
					objectTitle="test"
					objectSubtitle="tet">
					<actions>
						<ObjectPageHeaderActionButton
							id="save"
							text="save"
							hideText="false"
							type="Emphasized"/>
						<ObjectPageHeaderActionButton
							id="cancel"
							text="cancel"
							hideText="false"/>
					</actions>
				</ObjectPageHeader>
			</headerTitle>
			<headerContent>
				<m:MessageStrip
					text="systemSettingsLastLoginTitle"
					type="Information"
					showIcon="true">
				</m:MessageStrip>
			</headerContent>
			<sections>
				<ObjectPageSection>
				<subSections>
					<ObjectPageSubSection
						id="shopOwnerId"
						title="shopOwnerTitle">
						<blocks>
							<ObjectPageLazyLoader
								id="shopOwnerLazyLoader">
								<f:SimpleForm
									title="editOwnerDetailTitle"
									columnsL="2"
									columnsM="2"
									editable="true"
									layout="ResponsiveGridLayout">
									<f:content>
										<core:Title text="ownerAddress"/>
											<m:Label
												text="ownerFirstName"
												labelFor="firstNameInput"/>
											<m:Input
												id="firstNameInput"
												type="Text"
												width="100%"
												value="John"/>
											<m:Label
												labelFor="lastNameInput"
												text="ownerLastName"/>
											<m:Input
												id="lastNameInput"
												type="Text"
												width="100%"
												value="Doe"/>
											<m:Label
												labelFor="addressStreetInput"
												text="ownerStreet"/>
											<m:Input
												id="addressStreetInput"
												type="Text"
												width="100%"
												value="Midtown Street 23"/>
											<m:Label
												labelFor="addressTownInput"
												text="ownerZipCode"/>
											<m:Input
												id="addressTownInput"
												type="Text"
												width="100%"
												value="12345 Newport"/>
											<m:Label
												labelFor="addressCountryInput"
												text="ownerCountry"/>
											<m:Input
												id="addressCountryInput"
												type="Text"
												width="100%"
												value="England"/>
										<core:Title text="ownerContact" />
											<m:Label
												labelFor="phoneNumberInput"
												text="ownerMobile"/>
											<m:Input
												id="phoneNumberInput"
												type="Tel"
												width="100%"
												value="+1 234 / 56789"/>
											<m:Label
												labelFor="faxNumberInput"
												text="ownerFax"/>
											<m:Input
												id="faxNumberInput"
												type="Tel"
												width="100%"
												value="+1 987 / 654321"/>
											<m:Label
												labelFor="emailInput"
												text="mail"/>
											<m:Input
												id="emailInput"
												type="Email"
												width="100%"
												value="john.doe@myshop.com"/>
									</f:content>
								</f:SimpleForm>
							</ObjectPageLazyLoader>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
				</ObjectPageSection>
				<ObjectPageSection>
					<subSections>
						<ObjectPageSubSection
							id="shopConfigurationId"
							title="shopConfigurationTitle">
							<blocks>
								<ObjectPageLazyLoader
									id="shopConfigurationLazyLoader">
									<f:SimpleForm
										title="editSystemConfigurationTitle"
										columnsL="2"
										columnsM="2"
										editable="true"
										layout="ResponsiveGridLayout" >
										<f:content>
											<core:Title text="storeSettings" />
												<m:Label
													labelFor="storeNameInput"
													text="storeName"/>
												<m:Input
													id="storeNameInput"
													type="Text"
													width="100%"
													value="My Shop"/>
												<m:Label
													labelFor="storeDefaultLanguageInput"
													text="storeDefaultLanguage"/>
												<m:Input
													id="storeDefaultLanguageInput"
													type="Text"
													width="100%"
													value="English"/>
												<m:Label
													labelFor="storeCodeInput"
													text="storeCode"/>
												<m:Input
													id="storeCodeInput"
													type="Text"
													width="100%"
													value="R2D2-C3P0"/>
											<core:Title text="StoreContact" />
												<m:Label
													labelFor="storeWebsiteInput"
													text="storeWebSite"/>
												<m:Input
													id="storeWebsiteInput"
													type="Url"
													width="100%"
													value="http://www.myshop.com"/>
												<m:Label
													labelFor="storePhoneNumberInput"
													text="storePhone"/>
												<m:Input
													type="Tel"
													id="storePhoneNumberInput"
													width="100%"
													value="+1 2345/6789"/>
												<m:Label
													labelFor="storeMailInput"
													text="mail"/>
												<m:Input
													type="Email"
													id="storeMailInput"
													width="100%"
													value="info@myshop.com"/>
										</f:content>
									</f:SimpleForm>
								</ObjectPageLazyLoader>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
			</sections>
		</ObjectPageLayout>
	</m:Page>
</mvc:View>