<mvc:View displayBlock="true" controllerName="workerapp.components.oeeapp.controller.OrderManagement" height="100%" id="orderList" 
	xmlns="sap.m" 
	xmlns:f="sap.f" 
	xmlns:mvc="sap.ui.core.mvc">
	<f:DynamicPage id="dynamicPageId" class="sapUiNoContentPadding" toggleHeaderOnTitleClick="false" backgroundDesign="Transparent">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle backgroundDesign="Transparent">
				<f:heading>
					<Title text="Siparisler"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>

		<!-- DynamicPage Content -->
		<f:content>
			<Panel width="" class="arcloudBackgroundColor">
				<Table id="ordersTable" backgroundDesign="Transparent" width="auto" items="{orderModel>/orders}">
					<headerToolbar>
						<OverflowToolbar>
							<ToolbarSpacer/>
							<SearchField search="onSearch" width="17.5rem"/>
						</OverflowToolbar>
					</headerToolbar>
					<columns>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>PLANT_NAME}" />
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>ORDER_NUMBER}" />
						</Column>

						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>CUSTOMER}" />
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>STATUS}" />
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>PLANNED_START_DATE}" />
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>PLANNED_END_DATE}" />
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>PRODUCED_MALZEME}" />
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Navigation" press="onListItemPress">
							<cells>
								<ObjectIdentifier text="{orderModel>plantName}" />
								<ObjectIdentifier text="{orderModel>orderNo}" />
								<ObjectIdentifier text="{orderModel>customer}" />
								<ObjectIdentifier text="{orderModel>orderStatus}" />
								<ObjectIdentifier text="{orderModel>plannedStartDate}" />
								<ObjectIdentifier text="{orderModel>plannedEndDate}" />
								<ObjectIdentifier text="{orderModel>materialDesc}" />
								<FlexBox renderType="Div">
									<items>
										<Button text="Baslat" visible="{= ${orderModel>orderStatus} === 'NEW'}" type="Accept" class="sapUiSmallMarginEnd" press="startOrder">
											<layoutData>
												<FlexItemData growFactor="1" />
											</layoutData>
										</Button>
										<Button text="Beklet" visible="{= ${orderModel>orderStatus} === 'ACT'}" type="Emphasized" class="sapUiSmallMarginEnd" press="holdOrder">
											<layoutData>
												<FlexItemData growFactor="1" />
											</layoutData>
										</Button>
										<Button text="Devam Ettir" visible="{= ${orderModel>orderStatus} === 'HOLD'}" type="Accept" class="sapUiSmallMarginEnd" press="resumeOrder">
											<layoutData>
												<FlexItemData growFactor="1" />
											</layoutData>
										</Button>
										<Button text="Tamamla" visible="{= ${orderModel>orderStatus} === 'ACT'}" type="Accept" class="sapUiSmallMarginEnd" press="completeOrder">
											<layoutData>
												<FlexItemData growFactor="1" />
											</layoutData>
										</Button>
									</items>
								</FlexBox>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</Panel>
		</f:content>
	</f:DynamicPage>
</mvc:View>